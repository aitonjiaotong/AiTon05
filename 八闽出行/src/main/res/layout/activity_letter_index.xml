<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/FrameLayout1"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.jiaotong.aiton.myapplication.Activity.LetterIndexActivity" >
    <RelativeLayout
        android:id="@+id/rl_select_location_actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/aiton_basic_color">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="14dp"
            android:src="@mipmap/left_arrow_back"/>

        <TextView
            style="@style/title_sytle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="选择城市"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/listView_for_City"
        android:layout_below="@+id/rl_select_location_actionbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

    <com.jiaotong.aiton.myapplication.custom.LetterIndexView
        android:id="@+id/letter_index_view"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_select_location_actionbar"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/tv_letter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="#666666"
        android:textSize="28sp"
        android:visibility="gone"
        android:text="A" />

</RelativeLayout>
