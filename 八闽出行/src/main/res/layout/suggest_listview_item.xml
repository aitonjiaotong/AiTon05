<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/listview_item_selector"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_suggest_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_suggest_street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_suggest_address"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/iv_suggest_favorites"
            android:layout_marginLeft="12dp"/>

        <ImageView
            android:id="@+id/iv_suggest_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:padding="12dp"
            android:src="@mipmap/favorites_normal2"/>
    </RelativeLayout>
</LinearLayout>