<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.jiaotong.aiton.myapplication.Activity.CallCarForOthers">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/aiton_basic_color">

        <TextView
            android:id="@+id/textView25"
            style="@style/title_sytle02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="乘车人"/>

        <ImageView
            android:id="@+id/CancleCallCarForOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/Title_img_marginLeft"
            android:src="@mipmap/btn_x"/>

        <TextView
            android:id="@+id/complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/Title_tv_marginRight"
            android:text="完成"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:id="@+id/CancleCallCarForOther_rela"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/view_marginTop01"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/little_view_height"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/little_view_imgANDtv_marginLeftORright"
                    android:src="@mipmap/icon_people"/>

                <EditText
                    android:id="@+id/nameInputEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/little_view_imgANDtv_marginLeftORright"
                    android:layout_toEndOf="@+id/imageView24"
                    android:layout_toStartOf="@+id/nameInputCancle"
                    android:background="@null"
                    android:hint="填写真实姓名 享百万保障"
                    android:textSize="@dimen/EditTextSize"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/nameInputCancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/little_view_imgANDtv_marginLeftORright"
                    android:src="@mipmap/delete_btn"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>

                <RelativeLayout
                    android:id="@+id/nameInputCancle_rela"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/nameInputEdit">
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_Division_color"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/MailList_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@mipmap/goto_contract"/>

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="通讯录"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:background="@color/line_Division_color"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/little_view_height"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_user_phone"/>

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="+86"/>

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:src="@mipmap/myuser_arrows_right_gray"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/line_Division_color"
                android:orientation="vertical"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/phoneInputEdit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/little_view_imgANDtv_marginLeftORright"
                    android:background="@null"
                    android:hint="请输入乘车人电话号码"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:textColor="@color/black"
                    android:textSize="@dimen/EditTextSize"
                    android:layout_toStartOf="@+id/phoneNumCancle"/>

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/phoneNumCancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/little_view_imgANDtv_marginLeftORright"
                    android:src="@mipmap/delete_btn"/>

                <RelativeLayout
                    android:id="@+id/phoneNumCancle_rela"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/phoneInputEdit">
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:background="@color/line_Division_color"
            android:orientation="vertical"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/little_view_height">

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/little_view_imgANDtv_marginLeftORright"
                android:src="@mipmap/icon_message"/>

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/little_view_imgANDtv_marginLeftORright"
                android:layout_toEndOf="@+id/imageView28"
                android:text="短信通知乘车人"
                android:textColor="@color/black"/>

            <ImageView
                android:padding="10dp"
                android:id="@+id/MessageNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/little_view_imgANDtv_marginLeftORright"
                android:src="@mipmap/icon_selected"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="@dimen/little_view_imgANDtv_marginLeftORright"
        android:layout_marginTop="5dp"
        android:text="给司机留言"/>

    <EditText
        android:textSize="@dimen/EditTextSize"
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView30"
        android:background="@color/white"
        android:gravity="left|top"
        android:hint="请输入留言"
        android:inputType="textMultiLine"
        android:padding="15dp"
        />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText3"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="@dimen/little_view_imgANDtv_marginLeftORright"
        android:layout_marginTop="5dp"
        android:text="历史乘车人"/>

    <ListView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_below="@+id/textView31"
        android:layout_alignParentStart="true"/>

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView31"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无历史乘车人"
            android:id="@+id/textView32"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>
